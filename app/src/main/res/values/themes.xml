<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tree_green</item>
        <item name="colorPrimaryVariant">@color/baby_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tree_green</item>
        <item name="colorSecondaryVariant">@color/baby_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TreeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TreeApp.Secondary">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/tree_green</item>

    </style>

    <style name="Theme.TreeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TreeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>